# Serverless Builder Configuration

# RunPod API key for calling the embedder serverless endpoint
RUNPOD_API_KEY=rp_xxxxxxxxxx

# RunPod Embedder Endpoint ID
# Create this endpoint with the doctown-embedder-gpu image
EMBEDDER_ENDPOINT_ID=xxxxxxxx

# Assembly API URL (optional, only if running assembly)
# ASSEMBLY_URL=http://localhost:3001

# Enable assembly step (default: false)
# RUN_ASSEMBLY=false

# Embedding batch configuration
EMBEDDING_BATCH_SIZE=64
EMBEDDING_MAX_CONCURRENT=4
EMBEDDING_POLL_INTERVAL=0.5
EMBEDDING_TIMEOUT=300

# Internal flags (set automatically)
PRODUCTION=true
SKIP_EMBEDDING=true
